<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    @* Start Header *@
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a href="/Home/Index" class="btn ">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/AboutUs" class="btn ">About Us</a>
                    </li>

                    <li class="nav-item">
                        <a href="/Home/Privacy" class="btn ">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a href="/Home/ContactUs" class="btn ">Contact Us</a>
                    </li>
                </ul>
                <button class="btn ">
                    <a href="/Account/Login" class="btn btn-outline-warning">Login</a>
                </button>

                <button class="btn">
                    <a href="/Account/Register" class="btn btn-outline-warning">Register</a>
                </button>
            </div>
        </div>
    </nav>
    @* End Header *@

    @* Start Body *@
    <section>
        <div class="mt-3 p-5 bg-warning text-white rounded-2">
       
            <h1>
                @RenderBody()
            </h1>
        </div>
    </section>
    @* End Body *@

